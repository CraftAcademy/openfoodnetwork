.darkswarm
  .row
    = render :partial => 'spree/shared/error_messages', :locals => { :target => @user }
  .row
    = form_for Spree::User.new, :as => @user, :url => '/account/update_address', :method => :put do |f|
      .small-12.medium-6.columns
        %h3.text-center Edit Billing Address
        = render partial: 'spree/users/address_form', locals: { f: f, address_type: :bill_address }

      .small-12.medium-6.columns
        %h3.text-center Edit Shipping Address
        = render partial: 'spree/users/address_form', locals: { f: f, address_type: :ship_address }

      .medium-12.columns.text-center
        = f.submit t(:update), :class => 'button primary'
